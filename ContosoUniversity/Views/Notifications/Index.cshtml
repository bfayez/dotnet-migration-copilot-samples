@{
    ViewBag.Title = "Admin Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <p class="text-muted">Real-time notifications for entity operations across the system.</p>
        
        <div class="alert alert-info" role="alert">
            <strong>Real-time Notifications</strong><br />
            As an administrator, you will receive notifications in the top-right corner when any entity (students, courses, instructors, departments) is created, updated, or deleted by any user in the system.
        </div>
        
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-bell"></i> Notification Settings
                </h3>
            </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Monitored Operations</h4>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="label label-success">CREATE</span>
                                Entity creation operations
                            </li>
                            <li class="list-group-item">
                                <span class="label label-info">UPDATE</span>
                                Entity modification operations
                            </li>
                            <li class="list-group-item">
                                <span class="label label-warning">DELETE</span>
                                Entity deletion operations
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4>Monitored Entities</h4>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <i class="glyphicon glyphicon-user"></i>
                                Students
                            </li>
                            <li class="list-group-item">
                                <i class="glyphicon glyphicon-book"></i>
                                Courses
                            </li>
                            <li class="list-group-item">
                                <i class="glyphicon glyphicon-education"></i>
                                Instructors
                            </li>
                            <li class="list-group-item">
                                <i class="glyphicon glyphicon-briefcase"></i>
                                Departments
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="glyphicon glyphicon-cog"></i> Technology Information
                </h3>
            </div>
            <div class="panel-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Note:</strong> This notification system uses Microsoft Message Queuing (MSMQ) as the underlying technology for reliable message delivery.
                </div>
                
                <h4>Features:</h4>
                <ul>
                    <li><strong>Real-time delivery</strong> - Notifications appear immediately when operations occur</li>
                    <li><strong>Reliable messaging</strong> - MSMQ ensures messages are not lost</li>
                    <li><strong>Admin-only</strong> - Only administrators receive these notifications</li>
                    <li><strong>Auto-dismiss</strong> - Notifications automatically disappear after 8 seconds</li>
                    <li><strong>User-friendly</strong> - Click the Ã— to dismiss notifications manually</li>
                </ul>
                
                <h4>Queue Information:</h4>
                <p><strong>Queue Path:</strong> <code>.\\Private$\\ContosoUniversityNotifications</code></p>
                <p><strong>Check Interval:</strong> 5 seconds</p>
                <p><strong>Max Visible Notifications:</strong> 5 at a time</p>
            </div>
        </div>
        
        <div class="well">
            <h4>Quick Test</h4>
            <p>To test the notification system, try performing any of the following operations:</p>
            <ul>
                <li>@Html.ActionLink("Create a new student", "Create", "Students", null, new { @class = "btn btn-sm btn-primary" })</li>
                <li>@Html.ActionLink("Create a new course", "Create", "Courses", null, new { @class = "btn btn-sm btn-success" })</li>
                <li>@Html.ActionLink("Create a new instructor", "Create", "Instructors", null, new { @class = "btn btn-sm btn-warning" })</li>
                <li>@Html.ActionLink("Create a new department", "Create", "Departments", null, new { @class = "btn btn-sm btn-info" })</li>
            </ul>
            <p class="text-muted">After creating, editing, or deleting any entity, you should see a notification appear in the top-right corner of your screen.</p>
        </div>
    </div>
</div>
